{% extends 'base.html.twig' %}

{% block title %}Livre{% endblock %}

{% block body %}

    
{% block stylesheet %}
        <style>
            .thID{
            border: 1px solid black;
            border-collapse: collapse;
            height :35px;

            }

            body{
        background-image: url("../images/biblio2.jpg");
        background-repeat: no-repeat, repeat;
        background-position: center;
        background-size: cover;
    }
    
        </style>

    {% endblock %}

    <div align ="center" >
    </br>
    <h1 >Livre {{ livre.titre }} </h1> </br>
    <table class="tableCSS" width ="50%" align="center">

        <tbody >
            <tr>
                <th align="left" width = "20%" class="thID">Id</th>
                <td width = "30%" class="thID">{{ livre.id }}</td>
            </tr>
            <tr>
                <th align="left" class="thID">Isbn </th>
                <td class="thID">{{ livre.isbn }}</td>
            </tr>
            <tr>
                <th align="left" class="thID">Titre</th>
                <td class="thID">{{ livre.titre }}</td>
            </tr>
            <tr>
                <th align="left" class="thID">NombrePages </th>
                <td class="thID">{{ livre.nombrePages }}</td>
            </tr>
            <tr>
                <th align="left" class="thID">DateDeParution</th>
                <td class="thID">{{ livre.dateDeParution ? livre.dateDeParution|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th align="left" class="thID">Note</th>
                <td class="thID">{{ livre.note }}</td>
            </tr>

            <tr>
                <th align="left" class="thID">Autheurs </th>
                
                <td class="thID">
                <ul>
                     {% for auteur in livre.getAuteurs() %}
                     <li>
                        {{ auteur.getNomPrenom() }}
                     </li>
                     {% endfor %}
                     </ul>
                </td>
                
            </tr>

            <tr>
                <th align="left" class="thID"> Genres </th>
                
                <td class="thID">
                <ul >
                     {% for auteur in livre.getGenres() %}
                     <li >
                        {{ auteur.getnom() }}
                     </li>
                     {% endfor %}
                     </ul>
                </td>
            </tr>
        </tbody>
    </table>

    
    
{% if is_granted('ROLE_ADMIN') %}
    {{ include('livre/_delete_form.html.twig') }}
{% endif %}
    </div>
    
{% endblock %}
